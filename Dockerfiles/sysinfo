FROM debian:jessie
MAINTAINER Anton Paquin <antonpaquin@gmail.com>

RUN useradd -m user

RUN apt-get update \
  && apt-get install -y --no-install-recommends \
     acpi \
  && rm -rf /var/lib/apt/lists/*

COPY sysinfo.sh /home/user/sysinfo.sh

RUN echo "US/Pacific" > /etc/timezone && \
    dpkg-reconfigure -f noninteractive tzdata

ENTRYPOINT [ "/home/user/sysinfo.sh" ]
